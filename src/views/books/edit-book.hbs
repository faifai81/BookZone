<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
            <h3> Edit Book</h3>
        </div>
        <div class="card-body">
            <form action="/books/edit/{{book.id}}?_method=PUT" method="POST" >
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" value="{{book.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="author" class="form-control" value="{{book.author}}" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="summarry"  class="form-control" >{{book.summarry}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="idioma" class="form-control" value="{{book.idioma}}">
                </div>
                <div class="form-group">
                    <input type="text" name="portada" class="form-control" value="{{book.portada}}">
                </div>
                <div class="form-group">
                    <input type="text" name="price" class="form-control" value="{{book.price}}â‚¬">
                </div>
                <div class="form-group">
                    <input type="text" name="buyLink" class="form-control" value="{{book.buyLink}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Save
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>